@model IEnumerable<ADManageSystem.Models.Topic>

@{
    ViewBag.Title = "Index";
}

<h1>Topics of class @ViewBag.ClassCode</h1>

<p>
    @Html.ActionLink("Create New", "Create", new { classCode = @ViewBag.ClassCode }, new { @class = "btn btn-primary" })
</p>
<p>
    @Html.ActionLink("Back to List", "Index", "ManageClasses", new { area = "Staff" }, null)
</p>
<table class="table table-hover table-responsive table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUsers.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUsers.UserName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

